{% extends 'base.html.twig' %}

{% block title %}Nouvelle publication{% endblock %}

{% block body %}

    <section class="hero is-link">
        <div class="hero-body">
            <p class="title">
                Nouvelle publication
            </p>
            <p class="subtitle">
                Completez les champs suivants:
            </p>
        </div>
    </section>
    <div class="container">
        <div class="section">
            {{ form_start(form) }}
                {{ form_row(form.title) }}
                {{ form_row(form.content) }}
                {{ form_row(form.author) }}
                {{ form_row(form.email) }}
                {{ form_label(form.price) }}
                {{ form_widget(form.price) }}
                <div class="has-text-danger">
                    {{ form_errors(form.price) }}
                </div>
                <div class="columns">
                    <div class="column">
                        <div class="select is-link">
                            {{ form_row(form.category) }}
                        </div>
                    </div>
                </div>
                <div style="text-align: center">
                    {{ form_row(form.submit) }}
                </div>
            {{ form_end(form) }}
        </div>

    </div>
    <button class="button is-link is-rounded" href="{{ path('advert_index') }}">Retour aux publications</button>

{% endblock %}
