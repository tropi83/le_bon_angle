{% extends 'base.html.twig' %}

{% block title %}Advert index{% endblock %}

{% block body %}
    <h1>Advert index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>Author</th>
                <th>Email</th>
                <th>Price</th>
                <th>State</th>
                <th>CreatedAt</th>
                <th>PublishedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for advert in adverts %}
            <tr>
                <td>{{ advert.id }}</td>
                <td>{{ advert.title }}</td>
                <td>{{ advert.content }}</td>
                <td>{{ advert.author }}</td>
                <td>{{ advert.email }}</td>
                <td>{{ advert.price }}</td>
                <td>{{ advert.state }}</td>
                <td>{{ advert.createdAt ? advert.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ advert.publishedAt ? advert.publishedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    {% if workflow_can(advert, 'publish') %}
                        <a href="{{ path('advert_workflow', {'id': advert.id, 'state': 'publish' }) }}">Publier</a>
                    {% endif %}
                    {% if workflow_can(advert, 'reject') %}
                        <a href="{{ path('advert_workflow', {'id': advert.id, 'state': 'reject' }) }}">Rejeter</a>
                    {% endif %}
                    {% if workflow_can(advert, 'to_rejected') %}
                        <a href= "{{ path('advert_workflow', {'id': advert.id, 'state': 'to_rejected' }) }}">A Rejeter</a>
                    {% endif %}
                    <a href="{{ path('advert_show', {'id': advert.id}) }}">show</a>
                    <a href="{{ path('advert_edit', {'id': advert.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('advert_new') }}">Create new</a>
{% endblock %}
