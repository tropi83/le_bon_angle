{% extends 'base.html.twig' %}

{% block title %}Catégorie {{ category.name }}{% endblock %}

{% block body %}
    <section class="hero is-link">
        <div class="hero-body">
            <div class="float-right">
                <a class="button is-primary float-right mb-2" href="{{ path('category_edit', {'id': category.id}) }}">
                    <span class="icon">
                        <i class="fas fa-wrench"></i>
                    </span>
                    <span>Modifier</span>
                </a>
                {{ include('category/_delete_form.html.twig') }}
            </div>
            <p class="title">
                {{ category.name }}
            </p>
            <a class="button is-primary" href="{{ path('category_index') }}">
                    <span class="icon">
                        <i class="fas fa-long-arrow-alt-left"></i>
                    </span>
                <span>Retour aux catégories</span>
            </a>
        </div>
    </section>
    <div class="container">
        <div class="section">
            <table class="table width-100">
                <tbody>
                    <tr>
                        <th>Identifiant</th>
                        <td>{{ category.id }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ category.name }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
