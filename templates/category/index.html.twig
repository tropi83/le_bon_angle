{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <section class="hero is-link">
        <div class="hero-body">
            <a class="button is-primary float-right" href="{{ path('category_new') }}">
                <span class="icon">
                    <i class="fas fa-plus-circle"></i>
                </span>
                <span>Ajouter</span>
            </a>
            <p class="title">
                Cat√©gories
            </p>
            <p class="subtitle">
                Total: {{ categories.getTotalItemCount  }}
            </p>
        </div>
    </section>
    <div class="container">
        <div class="section">
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr {% if loop.index is odd %} class="color" {% endif %}>
                        <td>
                            <a class="id-tag" href="{{ path('category_show', {'id': category.id}) }}">#{{ category.id }}</a>
                        </td>
                        <td>{{ category.name }}</td>
                        <td>
                            <a class="button is-grey-light is-rounded float-right" href="{{ path('category_edit', {'id': category.id}) }}">
                                    <span class="icon">
                                            <i class="fas fa-wrench"></i>
                                        </span>
                                <span>Modifier</span>
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        {{ knp_pagination_render(categories) }}
    </div>

{% endblock %}
